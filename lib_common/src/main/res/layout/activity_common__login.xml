<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/splash_bg" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="#88000000" />

        <TextView
            android:onClick="onClick"
            android:id="@+id/visitor_tv"
            android:layout_alignParentRight="true"
            android:textStyle=""
            android:layout_marginRight="@dimen/mm85"
            android:layout_marginTop="@dimen/mm85"
            android:textColor="@color/common_white"
            android:textSize="@dimen/mm30"
            android:text="游客登录"
            android:padding="@dimen/mm5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mm527"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mm90"
                android:layout_marginLeft="@dimen/mm85"
                android:layout_marginRight="@dimen/mm85"
                android:background="@drawable/register_border">

                <ImageView
                    android:layout_width="@dimen/mm30"
                    android:layout_height="@dimen/mm48"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mm60"
                    android:src="@drawable/login_phone" />

                <EditText
                    android:text="12341234"
                    android:maxLength="18"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@!$#%^*_-."
                    android:id="@+id/account_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mm90"
                    android:background="@drawable/register_bg_border_1"
                    android:hint="请输入账号"
                    android:paddingLeft="@dimen/mm119"
                    android:textColor="@color/common_white"
                    android:textColorHint="@color/common_white"
                    android:textSize="@dimen/mm32" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mm90"
                android:layout_marginLeft="@dimen/mm85"
                android:layout_marginRight="@dimen/mm85"
                android:layout_marginTop="@dimen/mm36"
                android:background="@drawable/register_border">

                <ImageView
                    android:layout_width="@dimen/mm30"
                    android:layout_height="@dimen/mm48"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mm60"
                    android:src="@drawable/login_password" />

                <EditText
                    android:text="123456"
                    android:maxLength="18"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@!$#%^*_-."
                    android:id="@+id/password_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mm90"
                    android:background="@drawable/register_bg_border_1"
                    android:hint="请输入密码"
                    android:paddingLeft="@dimen/mm119"
                    android:password="true"
                    android:textColor="@color/common_white"
                    android:textColorHint="@color/common_white"
                    android:textSize="@dimen/mm32" />
            </RelativeLayout>

            <Button
                android:layout_marginLeft="@dimen/mm85"
                android:layout_marginRight="@dimen/mm85"
                android:layout_marginTop="@dimen/mm36"
                android:onClick="onClick"
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mm90"
                android:background="@drawable/register_border_2"
                android:text="登录"
                android:textColor="@color/login_btn_text"
                android:textSize="@dimen/mm36" />

            <TextView
                android:onClick="onClick"
                android:id="@+id/register_tv"
                android:layout_marginRight="@dimen/mm85"
                android:layout_marginTop="@dimen/mm40"
                android:layout_gravity="right"
                android:textColor="@color/common_white"
                android:textSize="@dimen/mm30"
                android:text="还没有账号？去注册！"
                android:padding="@dimen/mm5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
