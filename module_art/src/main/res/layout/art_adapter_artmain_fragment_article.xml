<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <TextView
        android:id="@+id/author_tv"
        android:layout_marginTop="@dimen/mm30"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/mm20"
        android:textColor="@color/color_232323"
        android:text="作者"
        android:textSize="@dimen/mm40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm80" />

    <RelativeLayout
        android:background="@drawable/art_shape_white_con30"
        android:id="@+id/relativelay"
        android:layout_marginTop="@dimen/mm15"
        android:layout_below="@+id/author_tv"
        android:layout_marginLeft="@dimen/mm20"
        android:layout_marginRight="@dimen/mm20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/type_tv"
            android:layout_marginTop="@dimen/mm15"
            android:layout_marginLeft="@dimen/mm20"
            android:layout_marginRight="@dimen/mm20"
            android:textColor="@color/common_black_777"
            android:text="分类"
            android:textSize="@dimen/mm26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/content_tv"
            android:singleLine="true"
            android:layout_below="@+id/type_tv"
            android:layout_marginTop="@dimen/mm7"
            android:layout_marginLeft="@dimen/mm20"
            android:layout_marginRight="@dimen/mm20"
            android:textColor="@color/color_232323"
            android:text="标题"
            android:textSize="@dimen/mm32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/content_tv"
            android:id="@+id/user_tv"
            android:layout_marginTop="@dimen/mm7"
            android:layout_marginLeft="@dimen/mm20"
            android:layout_marginRight="@dimen/mm30"
            android:layout_marginBottom="@dimen/mm15"
            android:textColor="@color/common_black_999"
            android:text="姓名"
            android:textSize="@dimen/mm24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/user_tv"
            android:layout_below="@+id/content_tv"
            android:id="@+id/time_tv"
            android:layout_marginTop="@dimen/mm7"
            android:layout_marginRight="@dimen/mm20"
            android:textColor="@color/common_black_999"
            android:text="时间"
            android:textSize="@dimen/mm26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_below="@+id/relativelay"
        android:id="@+id/art_placeholder_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm50"/>

</RelativeLayout>